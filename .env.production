# Production Environment Variables - Azure Deployment
# Copy to .env and fill in your actual values

# ============= DATABASE =============
POSTGRES_USER=dbadmin
POSTGRES_PASSWORD=YourSecurePassword123
POSTGRES_DB=salesroute
# Format: postgresql://username:password@host:5432/database
# Example: postgresql://dbadmin:YourSecurePassword123@sales-route-tracker-db.postgres.database.azure.com:5432/salesroute
DATABASE_URL=postgresql://dbadmin:YourSecurePassword123@sales-route-tracker-db.postgres.database.azure.com:5432/salesroute

# ============= MICROSOFT GRAPH API & OAUTH =============
# Get these from Azure Portal > Azure Active Directory > App Registrations
MICROSOFT_CLIENT_ID=your-client-id-from-azure
MICROSOFT_CLIENT_SECRET=your-client-secret-from-azure
MICROSOFT_TENANT_ID=common
# Update this URL after you create your backend App Service
MICROSOFT_REDIRECT_URI=https://sales-route-tracker-backend.azurewebsites.net/auth/callback

# ============= ONEDRIVE FILE PATH =============
# Path to your Excel file in OneDrive (starting with /)
ONEDRIVE_FILE_PATH=/Sales/KalebHogelandJanuary19thStart4WeekSalesRoutePlan__1_.xlsx

# ============= BACKEND SECURITY =============
# Generate a new key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-generated-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ============= CORS & FRONTEND =============
# Update after creating Static Web App or Frontend App Service
CORS_ORIGINS=["https://sales-route-tracker-frontend.azurestaticapps.net"]
FRONTEND_URL=https://sales-route-tracker-frontend.azurestaticapps.net

# ============= OPTIONAL: Application Insights =============
# For monitoring and diagnostics
APPINSIGHTS_INSTRUMENTATION_KEY=optional-app-insights-key
