# Database Configuration
POSTGRES_USER=salesroute
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=salesroute
DATABASE_URL=postgresql://salesroute:change_this_password_in_production@db:5432/salesroute

# Microsoft Graph API Configuration
# Get these from Azure Portal App Registration
MICROSOFT_CLIENT_ID=your_client_id_here
MICROSOFT_CLIENT_SECRET=your_client_secret_here
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:8000/auth/callback

# OneDrive File Path
# This is the path to your Excel file in OneDrive
# Example: /Sales/KalebHogelandJanuary19thStart4WeekSalesRoutePlan__1_.xlsx
ONEDRIVE_FILE_PATH=/your/file/path/here.xlsx

# Backend Security
# Generate a secure random string for SECRET_KEY
# You can generate one using: openssl rand -hex 32
SECRET_KEY=your_very_secure_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Frontend Configuration
VITE_API_URL=http://localhost:8000
